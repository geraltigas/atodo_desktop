{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    // all file in src/main and src/preload
    "src/main/**/*",
    "src/preload/**/*",
    "src/types/**/*",
    "src/shared/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ]
  }
}
